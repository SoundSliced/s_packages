			"command": "cd example && flutter create . --platforms web"
		},
		{
			"label": "Analyze example",
			"type": "shell",
			"command": "cd example && flutter analyze"
		},
		{
			"label": "flutter test",
			"type": "shell",
			"command": "flutter",
			"args": [
				"test"
			]
		},
		{
			"label": "flutter test verify",
			"type": "shell",
			"command": "flutter",
			"args": [
				"test"
			]
		},
		{
			"label": "flutter analyze final",
			"type": "shell",
			"command": "flutter",
			"args": [
				"analyze"
			]
		},
		{
			"label": "flutter analyze clean",
			"type": "shell",
			"command": "flutter",
			"args": [
				"analyze"
			]
		},
		{
			"label": "Run Flutter Tests",
			"type": "shell",
			"command": "flutter test"
		},
		{
			"label": "custom flutter test circular expanded",
			"type": "shell",
			"command": "flutter",
			"args": [
				"test",
				"test/s_banner_circular_test.dart",
				"-r",
				"expanded"
			]
		},
		{
			"label": "custom flutter single test",
			"type": "shell",
			"command": "flutter",
			"args": [
				"test",
				"test/s_banner_circular_test.dart",
				"--plain-name",
				"SBanner with circular child circular banner with clipBannerToChild set to false",
				"-r",
				"expanded"
			]
		},
		{
			"label": "Check final status pre-filter-branch",
			"type": "shell",
			"command": "git status --porcelain -b || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Check if tasks.json tracked",
			"type": "shell",
			"command": "git ls-files --error-unmatch .vscode/tasks.json && echo tracked || echo not-tracked || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Commit tasks.json on main",
			"type": "shell",
			"command": "git add .vscode/tasks.json && git commit -m \"Temp: update tasks.json to reflect new tasks used by the CI\" || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Show full diff tasks.json",
			"type": "shell",
			"command": "git diff -- .vscode/tasks.json | sed -n '1,300p' || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Fix newline and commit tasks.json",
			"type": "shell",
			"command": "perl -0777 -pe 's/\\z/\\n/' -i .vscode/tasks.json || true; git add .vscode/tasks.json && git commit -m \"Update tasks.json newline\" || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Check status now clean",
			"type": "shell",
			"command": "git status --porcelain -b || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Show diff again tasks.json",
			"type": "shell",
			"command": "git diff -- .vscode/tasks.json | sed -n '1,400p' || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Show staged diff tasks.json",
			"type": "shell",
			"command": "git diff --staged -- .vscode/tasks.json | sed -n '1,200p' || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Commit tasks.json again if modified",
			"type": "shell",
			"command": "git add .vscode/tasks.json && git commit -m \"Temp: finalize tasks used for local operations\" || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Check git status before filter-branch",
			"type": "shell",
			"command": "git status --porcelain -b || true",
			"args": [],
			"isBackground": false,
			"problemMatcher": []
		}
	]
}